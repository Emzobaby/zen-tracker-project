<h1><%= @experience.studio_name %></h1>
<h3><%= @experience.yoga.type %> Yoga in <%= @experience.city.name %>, <%= @experience.country.name %>.</h3>
<div>
    <% if @experience.visited == "t" %>
      <h3>VISITED!</h3>
    <% end %>
  </div>
  <br>
<img src="<%= @experience.image_url %>" alt="<%= @experience.studio_name %>">
<p><%= @experience.description %></p>
<div>
  <% if @experience.bucket_list == "t" %>
    <p><%= @experience.studio_name %> is on your bucket list!</p>
  <% else %>
    <form action="/yoga-experiences/<%= @experience.id %>" method="POST">
      <input class="btn add-to-bucket-list" type="submit" value="Add to Bucket List?" />
    </form>
  <% end %>
</div>
