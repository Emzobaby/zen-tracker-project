<h2 class="where">Where would you like to go?</h2>
<form action="/continents/visited" method="POST" class="sort">
  <select name="sort-continents" id="sort-continents">
    <option value="all">All</option>
    <option value="visited">Visited</option>
    <option value="not-visited">Not Visited</option>
  </select>
  <input type="submit" value="Show" class="btn">
</form><br>
<div class="grid-container">
  <% for continent in @continents %>
    <div class="grid-item">
      <a href="/continents/<%= continent.id %>"><img src="<%= continent.image_url %>" alt="<%= continent.name %>"></a>
      <p><a href="/continents/<%= continent.id %>"><%= continent.name %></a></p>
    </div>
  <% end %>
</div>
