<h2 class="where"><%= @continent.name %></h2>
<div class="sort">
  <% if @continent.visited == "t" %>
    <h3 class="updated">VISITED!</h3>
  <% else %>
    <form action="/continents/<%= @continent.id %>" method="POST">
      <label>NOT YET VISITED</label>
        <input class="btn update-visited" type="submit" value="Update" />
      </form>
  <% end %>
</div>
<br>
<div class="grid-container">
  <% for country in @continent.countries %>
    <div class="grid-item">
      <a href="/countries/<%= country.id %>"><img src="<%= country.image_url %>" alt="<%= country.name %>"></a>
      <p><a href="/countries/<%= country.id %>"><%= country.name %></a></p>
    </div>
  <% end %>
</div>
